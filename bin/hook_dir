#!/bin/bash

__DIR__="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source $__DIR__/../lib/ciboulette_helpers

TYPE=$( basename $0 )

for hook in $( find $( pwd )/.git/hooks/$TYPE.d -type f -o -type l ); do
  step "hook-dir" "running <comment>$TYPE</comment> hook <comment>$( basename $hook )</comment>" $hook
done